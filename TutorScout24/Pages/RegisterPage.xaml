<?xml version="1.0" encoding="UTF-8"?>
<forms:MvvmNanoContentPage xmlns="http://xamarin.com/schemas/2014/forms" BackgroundImage="background_screen.jpg" Title="Registrieren" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:forms="clr-namespace:MvvmNano.Forms;assembly=MvvmNano.Forms" xmlns:viewModels1="clr-namespace:TutorScout24.ViewModels;assembly=TutorScout24" xmlns:controls="clr-namespace:TutorScout24.Controls;assembly=TutorScout24" x:TypeArguments="viewModels1:RegisterViewModel" x:Class="TutorScout24.Pages.RegisterPage" xmlns:ie="clr-namespace:IconEntry.FormsPlugin.Abstractions;assembly=IconEntry.FormsPlugin.Abstractions"
    xmlns:local="clr-namespace:TutorScout24.Pages;assembly=TutorScout24">
    <forms:MvvmNanoContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="15">
                </RowDefinition>
                <RowDefinition Height="*">
                </RowDefinition>
                <RowDefinition Height="15">
                </RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15">
                </ColumnDefinition>
                <ColumnDefinition Width="*">
                </ColumnDefinition>
                <ColumnDefinition Width="15">
                </ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Frame Grid.Column="1" Grid.Row="1" IsClippedToBounds="False" HasShadow="True" CornerRadius="10" BackgroundColor="#BFFFFFFF" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                <StackLayout VerticalOptions="Center">
                    <Image Source="icon.png" Margin="10">
                    </Image>
                    <ie:IconEntry Icon="password.png" HeightRequest="50" Placeholder="Email" Text="{Binding Email}">
                    </ie:IconEntry>
                    <ie:IconEntry Icon="username.png" HeightRequest="50" Placeholder="Benutzername" Text="{Binding UserName}">
                    </ie:IconEntry>
                    <ie:IconEntry Icon="password.png" HeightRequest="50" Placeholder="Passwort" Text="{Binding Password}" IsPassword="true">
                    </ie:IconEntry>
                    <Button BackgroundColor="#0074D9" TextColor="White" Text="Jetzt loslegen!" Command="{Binding StartCommand}">
                    </Button>
                </StackLayout>
            </Frame>
        </Grid>
    </forms:MvvmNanoContentPage.Content>
</forms:MvvmNanoContentPage>