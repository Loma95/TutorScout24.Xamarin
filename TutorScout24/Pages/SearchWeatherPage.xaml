<?xml version="1.0" encoding="UTF-8"?>
<forms:MvvmNanoContentPage xmlns="http://xamarin.com/schemas/2014/forms" BackgroundColor="White" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  xmlns:forms="clr-namespace:MvvmNano.Forms;assembly=MvvmNano.Forms"
    xmlns:viewModels1="clr-namespace:TutorScout24.ViewModels;assembly=TutorScout24"
    x:TypeArguments="viewModels1:SearchWeatherViewModel" x:Class="TutorScout24.SearchWeatherPage" >
    <forms:MvvmNanoContentPage.Content>
          <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition  Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Entry Grid.Row="0" PlaceholderColor="Gray" x:Name="inputField"  TextColor="Black" Placeholder="Bitte Stadt eingeben" Text="{Binding Input,Mode=TwoWay}" />
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                <RowDefinition  Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                  </Grid.RowDefinitions>
                <Label Grid.Row="0" TextColor="Black" Text="{Binding Weather.name}" FontSize="30" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"  />
                <Label Grid.Row="1" TextColor="Black" FontSize="20" Text="{Binding Weather.main.temp}" HorizontalTextAlignment="Center" />
            </Grid>
        </Grid>
    </forms:MvvmNanoContentPage.Content>
</forms:MvvmNanoContentPage >

